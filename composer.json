{
    "name": "lm-commons/lmc-zfr-rbac",
    "description": "Clone of zfr/rbac v1.2",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "zf2",
        "zf3",
        "rbac",
        "security"
    ],
    "homepage": "https://github.com/lm-commons/LmcZfrRbac",
    "authors": [
        {
            "name": "MichaÃ«l Gallego",
            "email": "mic.gallego@gmail.com"
        },
        {
            "name": "Eric Richer",
            "email": "eric.richer@vistoconsulting.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0",
        "squizlabs/php_codesniffer": "^3.5.5",
        "php-coveralls/php-coveralls": "^2.2",
        "phpspec/prophecy-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Rbac\\": "src/Rbac"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "phpcs -n --standard=PSR2 ./src/",
        "cs-fix": "phpcbf ./src/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "test-coverage-html": "phpunit --colors=always --coverage-html ./build/html"
    }
}
